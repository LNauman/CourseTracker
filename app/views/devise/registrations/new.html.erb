<div class="form">
  <h2 class="header">Sign up</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
      	<%= f.label :email %><br />
      	<%= f.email_field :email, required: true, autofocus: true %>
      </div>

      <div>
      	<%= f.label :first_name %><br>
      	<%= f.text_field :first_name, required: true, autofocus: true %>
      </div>
      
      <div>
      	<%= f.label :last_name %><br>
      	<%= f.text_field :last_name, required: true, autofocus: true %>
      </div>	
      
      <div>
      	<%= f.label :role %><br>
      	<%= f.select :role, ['Student', 'Teacher', 'Administrator'] %>
      </div>

      <div>
      	<%= f.label :password %><br />
      	<%= f.password_field :password, required: true, autofocus: true %>
      </div>

      <div>
      	<%= f.label :password_confirmation %><br />
      	<%= f.password_field :password_confirmation, required: true, autofocus: true %>
      </div>

      <div>
      	<%= f.submit "Sign up" %>
      </div>
      
    <% end %>
  
  <%= render "devise/shared/links" %>
</div>