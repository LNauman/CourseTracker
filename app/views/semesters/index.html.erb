<% if @user %>
  <h2 class="header">Semesters</h2>  
    <table class="table">
      <tbody>
        <% @semesters.each do |semester| %>
          <tr>
            <td><%= link_to semester.name, "semesters/#{semester.id}" %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>


<div class="back-button">
  <%= link_to 'Back', "users/#{@user.id}", class: "button" %>
</div>