<% if @user.role =='Teacher' %>
	<div class="row">
		<div class="large-6 columns">
			<h2 class="header">My Courses</h2>
				<table class="table">
					<div class="header"><%= paginate @user_courses %></div>
						<thead>
							<tr>
								<th>Course Title</th>
								<th>Semester</th>
							</tr>
						</thead>
						<tbody>
							<% @user_courses.each do |course| %>
								<tr>
									<td><%= link_to course.title, course_path(course) %></td>
									<td><%= course.semester.name if course.semester %></td>
								</tr>
							<% end %>
						</tbody>
				</table>
		</div>
		<div class="large-6 columns">
			<h2 class="header">All Courses Offered</h1>
				<table class="table">
					<div class="header"><%= paginate @all_courses %></div>
					<thead>
						<tr>
							<th>Course Title</th>
							<th>Semester<th>
						</tr>
					</thead>
					<tbody>
						<% @all_courses.each do |course| %>
							<tr>
								<td><%= course.title %></td>
								<td><%= course.semester.name if course.semester %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>


<% elsif @user.role == 'Student'%>
	<h2 class="header">Courses Offered</h2>
		<table class="table">
			<div class="header"><%= paginate @all_courses %></div>
			<thead>
				<tr>
					<th class="header">Course Title</th>
					<th class="header">Semester</th>
				</tr>
			</thead>
			<tbody>
				<% @all_courses.each do |course| %>
					<tr>
						<td><%= course.title %></td>
						<td><%= course.semester.name %></td>
					</tr>
				<% end %>
			</tbody>
	</table>

<% else %>
	<h2 class="header">Courses</h2>
		<table class="table">
			<div class="header"><%= paginate @all_courses %></div>
			<thead>
				<tr>
					<th class="header">Course Title</th>
					<th class="header">Semester</th>
				</tr>
			</thead>
			<tbody>
				<% @all_courses.each do |course| %>
					<tr>
						<td><%= link_to course.title, course_path(course) %></td>
						<td><%= course.semester.name if course.semester%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
<% end %>

<div class="back-button">
	<%= link_to 'Back', "users/#{@user.id}", class: "button" %>
</div>
