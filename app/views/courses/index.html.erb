<% if @user.role =='Teacher' %>
	<div class="row">
		<div class="large-6 columns">
			<h2 class="header">My Courses</h1>
				<table class="table">
					<thead>
						<tr>
							<th>Course Title</th>
							<th>Semester</th>
						</tr>
					</thead>
					<tbody>
						<% @user.courses.each do |course| %>
							<tr>
								<td><%= link_to course.title, course_path(course) %></td>
								<td><%= course.semester.name if course.semester %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
		<div class="large-6 columns">
			<h2 class="header">All Courses Offered</h1>
				<table class="table">
					<thead>
						<tr>
							<th>Course Title</th>
							<th>Semester<th>
						</tr>
					</thead>
					<tbody>
						<% @all_courses.each do |course| %>
							<tr>
								<td><%= course.title %></td>
								<td><%= course.semester.name if course.semester %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>

<% elsif @user.role == 'Student'%>	
	<h2 class="header">Courses Offered</h1>
		<table class="table">
			<thead>
				<tr>
					<th class="header">Course Title</th>
				</tr>
			</thead>
			<tbody>
				<% @all_courses.each do |course| %>
					<tr>
						<td><%= course.title %></td>
					</tr>
				<% end %>
			</tbody>
	</table>

<% else %>
	<h2 class="header">Courses</h1>
		<table class="table">
			<thead>
				<tr>
					<th class="header">Course Title</th>
					<th class="header">Semester</th>
				</tr>
			</thead>
			<tbody>
				<% @all_courses.each do |course| %>
					<tr>
						<td><%= link_to course.title, course_path(course) %></td>
						<td><%= course.semester.name if course.semester%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
<% end %>

<div class="back-button">
	<%= link_to 'Back', "users/#{@user.id}", class: "button" %>
</div>